{
	"name": "json2interface",
	"displayName": "json2interface",
	"description": "通过 json 自动生成 typescript 的 interface 接口定义",
	"version": "0.0.4",
	"publisher": "BluesCurry",
	"engines": {
		"vscode": "^1.35.0"
	},
	"galleryBanner": {
		"color": "#007ACC",
		"theme": "light"
	},
  "icon": "images/json2interface.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/bluescurry/vscode-json2interface.git"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:convert.json2interface"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "convert.json2interface",
				"title": "Convert json clipboard to TypeScript interfaces"
			}
		],
		"keybindings": [
			{
				"command": "convert.json2interface",
				"key": "ctrl+alt+V"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/copy-paste": "^1.1.30",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/underscore": "^1.10.22",
		"@types/vscode": "^1.35.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vsce": "^1.79.5",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"copy-paste": "^1.3.0",
		"underscore": "^1.11.0"
	}
}
